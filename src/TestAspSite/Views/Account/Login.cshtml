@using System.Collections.Generic
@using Microsoft.AspNet.Http
@using Microsoft.AspNet.Http.Authentication
@model LoginViewModel

@{
    ViewBag.Title = "Logon";
}
<form method="post" asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" class="login">
    <fieldset>
        <div>
            <label asp-for="Name">Username:</label>
            <input asp-for="Name" />
        </div>
        <div>
            <label asp-for="Password">Password:</label>
            <input asp-for="Password" type="password" />
        </div>
        <button type="submit" class="btn btn-default">Log in</button>
        <p>
            <a asp-action="CreateUser" asp-controller="Account">Create User</a>
        </p>
    </fieldset>


    <br />
</form>